{
    "title": "IQNOS NTP Configuration",
    "description": "The schema for the iqnos_ntp_config configuration file",
    "type": "object",
    "patternProperties": {
        "^server[1-3]$": {
            "type": "object",
            "$ref": "#/definitions/NTPCfg"
        }
    },
    "minProperties": 1,
    "maxProperties": 3,
    "additionalProperties": false,
    "definitions": {
        "NTPCfg": {
            "description": "The structure of the congfiguration for the NTP server",
            "type": "object",
            "properties": {
                "identifier": {
                    "description": "The NTP server that we are going to configure",
                    "type": "string",
                    "pattern": "(?i)^NTP-[1-3]$"
                },
                "ipaddress": {
                    "description": "The IP Address of the NTP server",
                    "type": "string",
                    "oneOf": [
                        {
                            "format": "ipv4"
                        },
                        {
                            "format": "ipv6"
                        }
                    ]
                }
            },
            "required": [
                "identifier"
            ],
            "additionalProperties": false
        }
    }
}