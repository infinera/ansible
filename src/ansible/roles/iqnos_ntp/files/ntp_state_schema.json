{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "IQNOS NTP State Configuration",
    "description": "The schema for the state_configs configuration variable",
    "type": "object",
    "properties": {
        "identifiers": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "(?i)^NTP-[1-3]$"
            },
            "minItems": 1,
            "maxItems": 3,
            "uniqueItems": true
        }
    },
    "additionalProperties": false,
    "required": ["identifiers"]
}